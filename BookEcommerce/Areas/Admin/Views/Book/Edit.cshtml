@model BookEcommerce.Areas.Admin.Models.AdminBookEditVM
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<div class="mt-5">

    @using (Html.BeginForm(FormMethod.Post))
    {
        <div class="container border border-dark p-3">
            <div class="row form-group ml-5">
                @Html.Label(null, "Kitap Id :", new { @class = "col-md-3" })
                @Html.Label(null, Model.Id.ToString(), new { @class = "col-md-5" })
                @Html.HiddenFor(x => x.Id)
            </div>
            <div class="row form-group ml-5">
                @Html.Label(null, "Kitap Adı :", new { @class = "col-md-3" })
                @Html.Label(null, Model.BookName.ToString(), new { @class = "col-md-5" })
                @Html.HiddenFor(x => x.BookName)
            </div>
            <div class="row form-group ml-5">
                @Html.Label(null, "Kitap Fiyatı :", new { @class = "col-md-3" })
                @Html.TextBoxFor(x => x.Price, null, new { @class = "col-md-5 form-control" })
            </div>
            <div class="row form-group ml-5">
                @Html.Label(null, "Kitap Sayfası :", new { @class = "col-md-3" })
                @Html.TextBoxFor(x => x.BookPages, null, new { @class = "col-md-5 form-control" })
            </div>
            <div class="row form-group ml-5">
                @Html.Label(null, "Kitap Açıklaması :", new { @class = "col-md-3" })
                @Html.TextAreaFor(x => x.Description, 10, 10, new { @class = "col-md-5 form-control" })
            </div>
            <div class="d-flex justify-content-end">
                <input class="btn btn-success" type="submit" value="Güncelle" />
            </div>
        </div>
    }
    @if (TempData["IslemBasarili"] != null)
    {
        <div class="container mt-2 text-center">
            <p class="alert alert-success font-weight-bolder">@TempData["IslemBasarili"]</p>
            <a class="btn btn-primary" href="/Admin/Home/Index">Kitap Listesi</a>
        </div>
    }
    @if (TempData["IslemBasarisiz"] != null)
    {
        <div class="container mt-2 text-center">
            <p class="alert alert-danger font-weight-bolder">@TempData["IslemBasarisiz"]</p>
        </div>
    }
</div>

