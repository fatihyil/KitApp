@model List<BookEcommerce.Areas.Admin.Models.AdminPublisherVM>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="container mt-5">
    <div class="text-center">
        <h1>Yayıncı Listesi</h1>
    </div>
    @if (TempData["EmptyPublisher"] != null)
    {
        <div class="alert alert-danger">
            <p>@TempData["EmptyPublisher"]</p>
        </div>
    }
    else
    {
        <table class="table table-dark">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Yayıncı Adı</th>
                    <th scope="col">Yayıncı Adresi</th>

                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <th scope="row">1</th>
                        <td>@item.Name</td>
                        <td>@item.Address</td>
                    </tr>
                }


            </tbody>
        </table>
    }

    <div class="d-flex justify-content-end">
        <a class="btn btn-success" href="/Admin/Publisher/Add">Yeni Yayıncı Ekle</a>
    </div>
</div>

