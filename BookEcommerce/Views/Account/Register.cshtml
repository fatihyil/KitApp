@model RegisterVM
@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm(FormMethod.Post))
{
    <div class="container  text-dark pt-5 border border-dark mt-5 ">
        <div class="ml-5">
            <div class="row">
                <div class="col-12 col-sm-6 ml-4">
                    <h1>Kayıt Ol</h1>
                    @Html.ValidationMessage("Kayıt Hatası")
                    <div class=" form-group">
                        @Html.Label(null, "Email")
                        @Html.TextBoxFor(x => x.Email, null, new { @class = "form-control" })
                        @Html.ValidationMessageFor(x => x.Email, null, new { @class = "col-md-3 text-danger" })
                    </div>
                    <div class=" form-group">
                        @Html.Label(null, "Kullanıcı Adı")
                        @Html.TextBoxFor(x => x.UserName, null, new { @class = "form-control" })
                        @Html.ValidationMessageFor(x => x.UserName, null, new { @class = "col-md-3 text-danger" })
                    </div>
                    <div class=" form-group">
                        @Html.Label(null, "Adı")
                        @Html.TextBoxFor(x => x.FirstName, null, new { @class = "form-control" })
                        @Html.ValidationMessageFor(x => x.FirstName, null, new { @class = "col-md-3 text-danger" })
                    </div>
                    <div class=" form-group">
                        @Html.Label(null, "Soyadı")
                        @Html.TextBoxFor(x => x.LastName, null, new { @class = "form-control" })
                        @Html.ValidationMessageFor(x => x.LastName, null, new { @class = "col-md-3 text-danger" })
                    </div>
                    <div class=" form-group">
                        @Html.Label(null, "Şifre")
                        @Html.TextBoxFor(x => x.Password, null, new { @class = " form-control", type = "password" })
                        @Html.ValidationMessageFor(x => x.Password, null, new { @class = "col-md-3 text-danger" })
                    </div>

                    <div class=" form-group">
                        @Html.Label(null, "Şifre Tekrarı")
                        @Html.TextBoxFor(x => x.ConfirmPassword, null, new { @class = " form-control", type = "password" })
                        @Html.ValidationMessageFor(x => x.ConfirmPassword, null, new { @class = "col-md-3 text-danger" })
                    </div>

                    <div class="form-group d-flex justify-content-end">
                        <input type="submit" value="Kaydol" class="btn btn-success" />
                    </div>
                </div>
            </div>
        </div>
    </div>
}

