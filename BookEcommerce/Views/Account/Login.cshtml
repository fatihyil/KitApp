@model LoginVM
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{
    ViewData["Title"] = "Login";
}



@using (Html.BeginForm(FormMethod.Post))
{
    <div class="container text-dark pt-5  border border-dark mt-5 ">

        <div class="ml-5">
            @Html.ValidationMessage("Giriş Hatası", new { @class = "text-danger" })
            @Html.ValidationMessage("Varolmayan kullanıcı.", new { @class = "text-danger" })
            <div class="row">
                <div class="col-12 col-sm-6 ml-4">
                    <h1>Giriş</h1>
                    <div class="form-group">
                        @Html.Label(null, "Kullanıcı Adı :", new { @class = "form-label" })
                        @Html.TextBoxFor(x => x.UserName, null, new { @class = "form-control" })
                        @Html.ValidationMessageFor(x => x.UserName, null, new { @class = "col-md-3 text-danger" })
                    </div>
                    <div class="form-group">
                        @Html.Label(null, "Şifre :", new { @class = "form-label" })
                        @Html.TextBoxFor(x => x.Password, null, new { @class = "form-control", type = "password" })
                        @Html.ValidationMessageFor(x => x.Password, null, new { @class = "col-md-3 text-danger" })
                    </div>
                    <div class="form-group d-flex justify-content-end">
                        <input type="submit" value="Giriş" class="btn btn-success" />
                    </div>
                </div>
            </div>
        </div>
    </div>
}

